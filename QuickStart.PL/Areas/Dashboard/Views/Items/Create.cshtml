@model ItemsFormVm
@section header {
	Items
}
<div class="col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Create Service</h3>
		</div>

		<form asp-controller="Services" asp-action="Create" enctype="multipart/form-data">
			<div class="card-body">
				<div class="form-group">
					<label asp-for="Name">Item Name</label>
					<input asp-for="Name" class="form-control" placeholder="Enter Name">
				</div>
				<div class="form-group">
					<label asp-for="Description">Item Description</label>
					<input asp-for="Description" class="form-control" placeholder="Enter Description">
				</div>
				<div class="form-group">
					<label asp-for="PortfolioId">Select Portfolio</label>
					<select asp-for="PortfolioId" class="form-control" asp-items="@(new SelectList(Model.portfolios, "Id", "Name"))">
					</select>
				</div>

				<div class="form-group">
					<label asp-for="Image">Upload Image</label>
					<input asp-for="Image" class="form-control-file">
				</div>

				@if (Model != null && Model.ImageName != null)
				{
					<div class="form-group">
						<label>Uploaded Image</label><br />
						<img src="~/images/@Model.ImageName" alt="Uploaded Image" style="max-width: 200px;" />
					</div>
				}

			</div>

			<div class="card-footer">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
</div>
