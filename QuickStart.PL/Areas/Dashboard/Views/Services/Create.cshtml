@model ServicesFormVm
@section header{
	Services
}
<div class="col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Create Service</h3>
		</div>


		<form asp-controller="Services" asp-action="Create" enctype="multipart/form-data">
			<div class="card-body">
				<div class="form-group">
					<label asp-for="Name">Service Name</label>
					<input asp-for="Name" class="form-control"  placeholder="Enter Name">
				</div>
				<div class="form-group">
					<label asp-for="Description">Service Description</label>
					<input asp-for="Description" class="form-control" placeholder="Enter Name">
				</div>
				<div class="form-group">
					<label asp-for="Image">Uplode Image</label>
					<input asp-for="Image" class="form-control-file">
				</div>
			</div>

			<div class="card-footer">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>

